<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="2dp"
    android:orientation="vertical"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="2dp">

        <FrameLayout
            android:id="@+id/imgContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignWithParentIfMissing="true"
            android:layout_marginTop="20dp"
            android:background="@color/white">

            <ImageView
                android:id="@+id/imageOffer"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="2dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/rectangle_bagrdound"
                android:contentDescription="description" />


        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtOfferDelveryStatus"
            android:layout_toEndOf="@+id/imgContainer"
            android:weightSum="2">

            <TextView
                android:id="@+id/txtOrderDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/rectangle_bagrdound"
                android:text="Order Details"
                android:textColor="@color/block"
                android:textSize="12sp"
                android:gravity="center"
                android:layout_weight="1"
                android:visibility="visible" />


            <TextView
                android:id="@+id/txtdetils"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/rectangle_bagrdound"
                android:text="cancel"
                android:gravity="center"
                android:layout_weight="1"
                android:textColor="@color/block"
                android:textSize="12sp"
                android:visibility="visible" />
        </LinearLayout>


        <TextView
            android:id="@+id/txtOfferName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@+id/imgContainer"
            android:textColor="@color/block"
            android:textSize="12sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/txtOfferId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtOfferName"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/imgContainer"
            android:textColor="@color/block"
            android:textSize="12sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/txtOfferDelveryStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtOfferId"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/imgContainer"
            android:textColor="@color/red"
            android:textSize="12sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/txtOfferTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/imgContainer"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="2dp"
            android:textColor="@color/block"
            android:textSize="14sp"
            android:visibility="visible" />


    </RelativeLayout>
</androidx.cardview.widget.CardView>
